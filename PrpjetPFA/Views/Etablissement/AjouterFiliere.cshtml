@model Etablissement
@{
}
<form method="post" asp-controller="Etablissement" asp-action="AjouterFiliere" class="form">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="Name" class="control-label">Nom</label>
        <input name="Name" class="form-control" />

    </div>

    <div class="form-group">
        <label for="DescriptionFiliere" class="control-label">DescriptionFiliere</label>
        <input name="DescriptionFiliere" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ContenuDuProgramme" class="control-label">ContenuDuProgramme</label>
        <input name="ContenuDuProgramme" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Debouche" class="control-label">Debouche</label>
        <input name="Debouche" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ConditionDadmission" class="control-label">ConditionDadmission</label>
        <input name="ConditionDadmission" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Cout" class="control-label">Cout</label>
        <input name="Cout" class="form-control" />
    </div>
    <label for="FaculteId">Choisissez une Faculte :</label>
    <div class="form-group">
        <select name="FaculteId" id="FaculteId">

            <option value="">-- Sélectionnez une Faculte  --</option>

            @foreach (Faculte item in Model.Faculte)
            {
                <option value="@item.Id">@item.Name</option>
              
            }


        </select>
    </div>
    <label for="EcoleId">Choisissez une Ecole :</label>
    <div class="form-group">
        <select name="EcoleId" id="EcoleId">

            <option value="">-- Sélectionnez une Ecole --</option>

            @foreach (EcolePrive item in Model.EcolePrive)
            {
                <option value="@item.Id">@item.Name</option>
               
               
            }


        </select>
    </div>



    <div class="form-group">
        <input type="submit" value="creer" class="btn btn-outline-success float-right">
    
    </div>

</form>
